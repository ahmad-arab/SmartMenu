@model SmartMenu.Models.Tenant.CreateTenantViewModel

@{
    ViewData["Title"] = "Create Tenant";
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form id="createTenantForm" asp-action="CreateTenant" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <div class="mb-4 d-flex justify-content-center">
                        <img id="selectedImage" src="~/images/logo-placeholder.png"
                             alt="example placeholder" style="width: 300px; height: 300px; object-fit: cover;" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <div data-mdb-ripple-init class="btn btn-primary btn-rounded">
                            <label asp-for="Logo" class="form-label text-white m-1">Choose file</label>
                            <input asp-for="Logo" type="file" accept="image/*" class="form-control d-none" onchange="displaySelectedImage(event, 'selectedImage')" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
