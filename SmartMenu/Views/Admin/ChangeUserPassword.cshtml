@model SmartMenu.Models.User.ChangeUserPasswordViewModel

@{
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form id="changeUserPasswordForm" asp-action="ChangeUserPassword" method="post" autocomplete="off">
                @* Hidden UserId *@
                <input asp-for="UserId" type="hidden" />

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}