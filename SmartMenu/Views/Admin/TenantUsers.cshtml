@model int
@{
    ViewData["Title"] = "Tenant Users";
    Layout = null;
    var tenantId = Model;
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <button id="addUserBtn" class="btn btn-primary mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" height="20" width="17.5" viewBox="0 0 448 512"><path fill="currentColor" d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" /></svg>
                Add User
            </button>
            <table id="tenantUsersTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


    <script>
        $(document).ready(function () {
            debugger;
            var tenantId = @tenantId;
            var table = $('#tenantUsersTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetTenantUsers", "Admin")',
                    data: { tenantId: tenantId },
                    dataSrc: ''
                },
                columns: [
                    { data: 'username' },
                    {
                        data: 'id',
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                <button class="btn btn-sm btn-outline-secondary change-password" data-id="${data}" title="Change Password">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="20" width="17.5"><path fill="currentColor" d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z"/></svg>
                                </button>
                                <button class="btn btn-sm btn-outline-danger ms-1 delete-user" data-id="${data}" title="Delete USer">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="20" width="17.5"><path fill="currentColor" d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>
                                </button>
                            `;
                        }
                    }
                ],
                autoWidth: false
            });

            // Add User
            $('#addUserBtn').on('click', function () {
                console.log("Add User button clicked");
                modalManager2.show('/Admin/CreateTenantUser?tenantId=' + tenantId, 'modal-m', 'Add User', true, function(result) {
                    table.ajax.reload();
                });
            });

            // Change Password
            $('#tenantUsersTable').on('click', '.change-password', function () {
                const userId = $(this).data('id');
                modalManager2.show('/Admin/ChangeUserPassword?userId=' + userId, 'modal-sm', 'Change Password', true, function(result) {
                    // Optionally reload or show notification
                });
            });

            // Delete User
            $('#tenantUsersTable').on('click', '.delete-user', function () {
                const id = $(this).data('id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the user.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DeleteUser", "Admin")',
                            type: 'POST',
                            data: { id: id, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                            success: function () {
                                table.ajax.reload();
                                Swal.fire('Deleted!', 'User has been deleted.', 'success');
                            },
                            error: function () {
                                Swal.fire('Error', 'Failed to delete user.', 'error');
                            }
                        });
                    }
                });
            });

            // Reload table when modal closes (after add/change)
            $('#dynamicModal2').on('hidden.bs.modal', function () {
                table.ajax.reload();
            });
        });
    </script>