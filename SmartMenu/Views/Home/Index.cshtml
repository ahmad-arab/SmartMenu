@{
    ViewData["Title"] = "SmartMenu - Multi-Tenant Menu Platform";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animate.css for animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e3e6f3 100%);
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
            color: #222;
        }

        .navbar {
            background: #fff;
            box-shadow: 0 2px 12px rgba(0,0,0,0.04);
        }

        .hero-section {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(120deg, #e3e6f3 60%, #fff 100%);
            position: relative;
        }

        .hero-content {
            z-index: 2;
        }

        .hero-title {
            font-size: 2.8rem;
            font-weight: 700;
            color: #2a2e43;
            margin-bottom: 1rem;
        }

        .hero-desc {
            font-size: 1.3rem;
            color: #555;
            margin-bottom: 2rem;
        }

        .hero-btn {
            font-size: 1.1rem;
            padding: 0.75rem 2.5rem;
            border-radius: 2rem;
            background: linear-gradient(90deg, #4f8cff 0%, #6ed6ff 100%);
            color: #fff;
            border: none;
            box-shadow: 0 4px 24px rgba(79,140,255,0.12);
            transition: background 0.2s;
        }

            .hero-btn:hover {
                background: linear-gradient(90deg, #6ed6ff 0%, #4f8cff 100%);
                color: #fff;
            }

        .hero-image {
            max-width: 480px;
            width: 100%;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(79,140,255,0.12);
            margin-left: 2rem;
        }

        .features-section {
            background: #fff;
            padding: 4rem 0 2rem 0;
        }

        .feature-card {
            background: #f8f9fa;
            border-radius: 1.2rem;
            box-shadow: 0 2px 16px rgba(79,140,255,0.07);
            padding: 2rem 1.5rem;
            text-align: center;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .feature-card:hover {
                transform: translateY(-8px) scale(1.03);
                box-shadow: 0 8px 32px rgba(79,140,255,0.15);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: #4f8cff;
            margin-bottom: 1rem;
        }

        .feature-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2a2e43;
            margin-bottom: 0.5rem;
        }

        .feature-desc {
            color: #555;
            font-size: 1rem;
        }

        .custom-design-section {
            background: linear-gradient(120deg, #e3e6f3 60%, #fff 100%);
            padding: 4rem 0 2rem 0;
        }

        .custom-design-card {
            background: #fff;
            border-radius: 1.2rem;
            box-shadow: 0 2px 16px rgba(79,140,255,0.07);
            padding: 2rem 1.5rem;
            text-align: left;
        }

        .custom-design-image {
            max-width: 100%;
            border-radius: 1rem;
            box-shadow: 0 4px 24px rgba(79,140,255,0.12);
        }

        .footer {
            background: #222;
            color: #fff;
            padding: 2rem 0 1rem 0;
            text-align: center;
            font-size: 1rem;
        }
        /* Animations for scroll */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(40px);
            transition: opacity 0.7s, transform 0.7s;
        }

            .animate-on-scroll.visible {
                opacity: 1;
                transform: none;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="~/images/logo.png" alt="SmartMenu Logo" style="height:48px;" class="me-2" />
                <span class="fw-bold fs-4" style="color:#4f8cff;">SmartMenu</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#features">Features</a></li>
                    <li class="nav-item"><a class="nav-link" href="#custom-design">Custom Design</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    <li class="nav-item"><a class="btn btn-primary ms-2 px-4" href="/Home/Welcome">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 hero-content animate__animated animate__fadeInLeft">
                    <h1 class="hero-title">Multi-Tenant Menu Platform for Restaurants, Hotels & More</h1>
                    <p class="hero-desc">
                        Create beautiful, multilingual menus for your business. Customize with your logo, images, and design. Let your customers view and order directly from your menu!
                    </p>
                    <a href="/Account/Register" class="hero-btn shadow animate__animated animate__pulse animate__infinite">Get Started</a>
                </div>
                <div class="col-lg-6 d-flex justify-content-center animate__animated animate__fadeInRight">
                    <!-- TODO: Add a hero image or video here -->
                    <div>
                        <img src="~/images/hero-placeholder.jpg" alt="Menu Showcase" class="hero-image" />
                        <!-- Or use a video: <video src="..." class="hero-image" autoplay loop muted></video> -->
                        <!-- [PLACEHOLDER: Add a beautiful menu/restaurant image or video here] -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features-section">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold animate-on-scroll">Why SmartMenu?</h2>
            <div class="row g-4">
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-globe"></i></div>
                        <div class="feature-title">Multi-Language Support</div>
                        <div class="feature-desc">Add categories and items in any language. Perfect for international customers.</div>
                    </div>
                </div>
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-image"></i></div>
                        <div class="feature-title">Custom Images & Branding</div>
                        <div class="feature-desc">Upload your logo and images to make your menu unique to your business.</div>
                    </div>
                </div>
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-palette"></i></div>
                        <div class="feature-title">Custom Designs</div>
                        <div class="feature-desc">Request a custom design for your menu to match your brand and style.</div>
                    </div>
                </div>
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-cart-shopping"></i></div>
                        <div class="feature-title">Online Ordering</div>
                        <div class="feature-desc">Let your customers order directly from your menu, fast and easy.</div>
                    </div>
                </div>
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-users"></i></div>
                        <div class="feature-title">Multi-Tenant Platform</div>
                        <div class="feature-desc">Manage multiple menus for different locations or brands, all in one place.</div>
                    </div>
                </div>
                <div class="col-md-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon"><i class="fa-solid fa-mobile-screen"></i></div>
                        <div class="feature-title">Mobile Friendly</div>
                        <div class="feature-desc">Menus look great on any device, from phones to tablets to desktops.</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Custom Design Section -->
    <section id="custom-design" class="custom-design-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 animate-on-scroll">
                    <div class="custom-design-card">
                        <h3 class="fw-bold mb-3">Custom Menu Designs</h3>
                        <p>
                            Want a menu that stands out? Our design team can create a custom look for your business. From colors to layout, make your menu truly yours.
                        </p>
                        <ul class="list-unstyled">
                            <li><i class="fa-solid fa-check text-success me-2"></i> Tailored to your brand</li>
                            <li><i class="fa-solid fa-check text-success me-2"></i> Unique layouts and styles</li>
                            <li><i class="fa-solid fa-check text-success me-2"></i> Fast turnaround</li>
                        </ul>
                        <a href="#contact" class="btn btn-outline-primary mt-3">Request Custom Design</a>
                    </div>
                </div>
                <div class="col-lg-6 animate-on-scroll">
                    <!-- TODO: Add a custom design showcase image here -->
                    <img src="~/images/custom-design-placeholder.png" alt="Custom Design Example" class="custom-design-image" />
                    <!-- [PLACEHOLDER: Add a custom menu design image here] -->
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5 bg-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7 animate-on-scroll">
                    <div class="card shadow-sm border-0 p-4">
                        <h4 class="fw-bold mb-3">Contact Us</h4>
                        <form>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Your Name" required />
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Your Email" required />
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Your Message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary px-4">Send Message</button>
                        </form>
                        <!-- You can wire this up to your backend or use a service like Formspree -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            &copy; 2025 SmartMenu. All rights reserved.
        </div>
    </footer>

    <!-- JS Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- Animate on scroll -->
    <script>
        // Simple scroll animation
        function animateOnScroll() {
            $('.animate-on-scroll').each(function () {
                var elem = $(this);
                var elemTop = elem.offset().top;
                var windowBottom = $(window).scrollTop() + $(window).height();
                if (windowBottom > elemTop + 40) {
                    elem.addClass('visible');
                }
            });
        }
        $(document).ready(function () {
            animateOnScroll();
            $(window).on('scroll', animateOnScroll);
        });
    </script>
</body>
</html>