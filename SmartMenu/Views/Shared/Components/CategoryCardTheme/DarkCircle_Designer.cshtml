@model SmartMenu.Models.Theme.Category.CategoryCardTheme_DarkCircle
<div class="vstack gap-2">
  <div>
    <label class="form-label">Diameter (px)</label>
    <input class="form-control form-control-sm" name="DiameterPx" value="@Model.DiameterPx" type="number" />
  </div>
  <div class="row g-2">
    <div class="col">
      <label class="form-label">Ring Color</label>
      <input class="form-control form-control-sm" name="RingColor" value="@Model.RingColor" type="color" />
    </div>
    <div class="col">
      <label class="form-label">Ring Thickness (px)</label>
      <input class="form-control form-control-sm" name="RingThicknessPx" value="@Model.RingThicknessPx" type="number" />
    </div>
  </div>
  <div class="row g-2">
    <div class="col">
      <label class="form-label">Title Color</label>
      <input class="form-control form-control-sm" name="TitleColor" value="@Model.TitleColor" type="color" />
    </div>
    <div class="col">
      <label class="form-label">Title Font Size (rem)</label>
      <input class="form-control form-control-sm" name="TitleFontSize" value="@Model.TitleFontSize" type="number" step="0.05" />
    </div>
  </div>
  <div>
    <label class="form-label">Title Font</label>
    <input class="form-control form-control-sm" name="TitleFont" value="@Model.TitleFont" />
  </div>
  <div>
    <label class="form-label">Shadow Opacity (0-1)</label>
    <input class="form-control form-control-sm" name="ShadowOpacity" value="@Model.ShadowOpacity" type="number" step="0.05" min="0" max="1" />
  </div>
</div>