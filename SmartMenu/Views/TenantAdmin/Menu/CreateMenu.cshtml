@model SmartMenu.Models.Menu.CreateMenuViewModel

@{
    ViewData["Title"] = "Create Menu";
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form id="createMenuForm" asp-action="CreateMenu" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <div class="mb-4 d-flex justify-content-center">
                        <img id="selectedImage" src="~/images/image-placeholder.jpg"
                             alt="menu placeholder" style="width: 300px; height: 220px; object-fit: cover;" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="btn btn-primary btn-rounded">
                            <label asp-for="Image" class="form-label text-white m-1">Choose file</label>
                            <input asp-for="Image" type="file" accept="image/*" class="form-control d-none" onchange="displaySelectedImage(event, 'selectedImage')" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <h5>Titles</h5>
                <div class="row">
                    @for (int i = 0; i < Model.Titles.Count; i++)
                    {
                        var lang = Model.AvailableLanguages?.FirstOrDefault(l => l.Id == Model.Titles[i].LanguageId);
                        <div class="col-md-6 col-lg-4 mb-3 mx-3 border rounded p-2">
                            <div class="mb-2">
                                <span class="fw-bold">@lang?.Name</span>
                                @if (lang?.IsRtl == true)
                                {
                                    <span class="badge bg-secondary">RTL</span>
                                }
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.Titles[i].Text" class="form-label">Title</label>
                                <input asp-for="@Model.Titles[i].Text" class="form-control" />
                                <span asp-validation-for="@Model.Titles[i].Text" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="@Model.Titles[i].LanguageId" />
                        </div>
                    }
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />